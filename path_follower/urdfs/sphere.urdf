<?xml version="1.0" ?>
<robot name="sphere">

  <link name="base_link">
    <visual>
      <geometry>
        <sphere radius="0.1"/> <!-- You can adjust the radius as needed -->
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/> <!-- Blue color -->
      </material>
    </visual>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

</robot>
